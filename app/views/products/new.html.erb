<h2>Add new product</h2>
<%= simple_form_for @product do |f| %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :price %>
          <%= f.input :address %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-light border' %>
        <% end %>
